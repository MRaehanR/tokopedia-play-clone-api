              "properties": {
                "product_detail": {
                  "type": "string",
                  "example": "https://localhost:3000/api/videos/asodiuhjas890u123"
                }
              }
            }
          }
        }
      },
      "Comments": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "CommentID01"
          },
          "video_id": {
            "type": "string",
            "example": "VideoID01"
          },
          "username": {
            "type": "string",
            "example": "MRaehanR"
          },
          "message": {
            "type": "string",
            "example": "Murah Banget Kak!"
          },
          "timestamp": {
            "type": "string",
            "example": "1 jam lalu"
          }
        }
      },
      "ErrorNotFound": {
